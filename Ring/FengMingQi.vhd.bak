--蜂鸣器模块--
LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED,ALL;

ENTITY FENGMINGQI IS
   PORT(clk_1,clk_500:IN STD_LOGIC;
	     PROCESS_END:IN STD_LOGIC; 
	     FOUT:OUT STD_LOGIC);
END ENTITY;

ARCHITECTURE F OF FENGMINGQI IS
SIGNAL COUNT:INTEGER RANGE 0 TO 5;
BEGIN
P1:PROCESS(clk_500,clk_1,PROCESS_END)
BEGIN
  IF(PROCESS_END='1')THEN 
     IF(clk_1'EVENT AND clk_1='1')
	  THEN COUT<=COUT+1;
	  END IF;
	  IF COUNT=5  THEN COUT<=0;
	  ELSE  FOUT<=clk_500;
	  END IF;
  ELSE COUNT<=0;
  END IF;
END PROCESS p1;
  